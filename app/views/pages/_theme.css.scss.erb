<% content_for :stylesheets do %>

  <% if @page.font == 'Lato' %>
    <link href='//fonts.googleapis.com/css?family=Lato:300,400,700,900' rel='stylesheet' type='text/css'>
  <% end %>

  <style>
    <% theme_color = '#00bce2' %>

    body {
      font-family: <%= @page.font %>;
    }

    h1, h2, h3
    a {
      color: <%= theme_color %>;
    }

    <%# (@page.custom_css.html_safe) if @page.custom_css.present? %>

  </style>

<% end %>

