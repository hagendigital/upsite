<%= simple_form_for(@page, url: settings_account_path, remote: true) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Account</h4>
  </div>

  <div class="modal-body">      

    <%# f.input :name %>    
    <%# f.input :subdomain, input_html: { readonly: true } %>    

    <p class="lead">Upgrade to <strong>Pro</strong> for only <strong>&euro;25</strong> per year</p>

    <table class="table">
      <thead>
        <tr>
          <th>&nbsp;</th>
          <th>Free</th>
          <th>Pro</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th>No ads</th>
          <td><i class="fa fa-lg fa-times text-muted"></i></td>
          <td><i class="fa fa-lg fa-check text-success"></i></td>
        </tr>
        <tr>
          <th>Custom domain</th>
          <td><i class="fa fa-lg fa-times text-muted"></i></td>
          <td><i class="fa fa-lg fa-check text-success"></i></td>
        </tr>
        <tr>
          <th>More storage <span class="text-muted">(1GB)</span></th>
          <td><i class="fa fa-lg fa-times text-muted"></i></td>
          <td><i class="fa fa-lg fa-check text-success"></i></td>
        </tr>
        <tr>
          <th>Warm, fuzzy feeling</th>
          <td><i class="fa fa-lg fa-times text-muted"></i></td>
          <td><i class="fa fa-lg fa-check text-success"></i></td>
        </tr>
      </tbody>
    </table>

    <fieldset>
      <h4><i class="fa fa-credit-card"></i> Credit card</h4>
      <p>Payments are processed by <a href="#">Stripe</a> and billed yearly. You can cancel at any time.</p>
      <%= f.input :cc_number, label: 'Number' %>
      <%= f.input :cc_type, label: 'Type', collection: ['Visa', 'MasterCard', 'American Express'] %>
    </fieldset>

  </div>

  <div class="modal-footer">
    <%= f.button :submit, 'Upgrade', class: 'btn btn-success' %>
  </div>

<% end %>
