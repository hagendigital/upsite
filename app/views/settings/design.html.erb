<%= simple_form_for(@page, url: settings_design_path, remote: true) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Design</h4>
  </div>

  <div class="modal-body">      
    <%= f.input :font, collection: ['Helvetica', 'Lato', 'Georgia'], include_blank: false, hint: 'Preview all of the <a href="https://www.google.com/fonts#ReviewPlace:refine/Collection:Lato|Arvo" target="_blank">available fonts</a>.'.html_safe %>

    <%= f.input :background_color, input_html: { data: { toggle: 'colorpicker' } } %>    
    <%= f.input :theme_color, input_html: { data: { toggle: 'colorpicker' } } %>    

    <fieldset>
      <legend>Advanced</legend> 
      <%= f.input :custom_css, hint: 'PageKit is built on <a href="http://getbootstrap.com" target="_blank">Bootstrap</a>. Your themes and custom styles should work here too.'.html_safe %>    
    </fieldset>
  </div>

  <div class="modal-footer">
    <%= f.button :submit %>
  </div>

<% end %>
