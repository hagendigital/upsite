<style>
  .wrapper {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    flex: 2;
    overflow: hidden;
  }
  .column {
    display: flex;
    height: 100vh;
    align-items: center;
    align-content: center;
    flex-shrink: 0;
    flex-direction: column;
    justify-content: center;
    position: relative;
  }
  .column-a {
    width: 40vw;
    background: #38D36E;
    color: #fff;
    font-weight: bold;
    text-align: center;
    padding: 0 5vw;
    width: 40vw;
  }
  .column-b {
    width: 60vw;
  }
  .column-b .header {
    margin-top: -40px;
    margin-bottom: 0px;
    text-align: center;
  }
  .row {
    display: flex;
    flex-direction: row;
    align-items: center;
  }
  .column-b-1,
  .column-b-2 {
    width: 30vw;
  }
  .column-b-1 {
    padding-left: 8vw;
  }
  .column-b-2 {
    padding: 0 5vw;
  }
  .slide {
    display: flex;
    flex-direction: column;
    height: 100vh;
    align-content: center;
    align-items: center;
    justify-content: center;
    width: 100%;
    width: 40vw;
    padding: 0 5vw;
    transition: opacity .5s ease-in;
    position: absolute;
    top: 0;
    left: 0;
  }
  .slide + .slide {
    opacity: 0;
  }
  .slide-caret {
    font-size: 80px;
    color: #38D36E;
    position: absolute;
    right: 5px;
    top: 50%;
    transform: translate(100%, -50%);
    z-index: 2;
  }
  .text-muted,
  .text-muted a {
    color: #ccc !important;
  }
  .text-muted a {
    text-decoration: none;
    border-bottom: 1px solid #eee;
  }
  .form-group:last-child {
    padding-top: 5px;
  }
  .column-a-1,
  .column-a-2 {
    align-items: center;
    align-content: center;
  }
  .column-a-1 {
    padding-right: 1vw;
  }
  .btn-contact {
    position: absolute;
    bottom: 20px;
    right: 20px;
    display: block;
    width: 50px;
    height: 50px;
    background: #38D36E;
    color: #fff !important;
    font-size: 22px;
    border-radius: 100%;
    box-shadow: 0 0 5px hsla(0,0%,100%,.1), 0 0 10px 0 rgba(0,0,0,.15)
  }
  .btn-contact:focus,
  .btn-contact:hover,
  .btn-contact:active {
    outline: none !important;
  }
  .modal-dialog {
    position: absolute;
    right: 20px;
    bottom: 60px;
    width: 25vw;
  }
</style>

