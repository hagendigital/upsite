<header
  class="block showbox"
  data-url="<%= block_path(showbox) %>"
  id="top"
  style="background-image: url(<%= showbox.image %>); background-color: <%= showbox.background_color %>;">

  <div class="container">

    <div class="block-controls">
      <a href="<%= edit_block_path(showbox, params: { type: 'header' }) %>" title="" data-toggle="modal" data-target="#modal">
        <i class="fa fa-pencil"></i>
      </a>
      <a href="<%= block_path(showbox) %>" title="" data-method="delete" data-confirm="Are you sure you want to delete this block?">
        <i class="fa fa-trash-o"></i>
      </a>
      <a href="#" class="move" title="">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <h1>
      <img src="<%= showbox.image %>" alt="<%= @page.name %>" class="ximg-responsive"><br>

      <%= showbox.text %>
    </h1>

  </div>
</header>

