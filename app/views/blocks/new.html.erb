<% if params[:type] %>

  <%= render "blocks/#{params[:type]}/form" %>

<% else %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
  </div>

  <div class="modal-body">
    <div class="text-center">

      <!-- Text -->
      <a href="<%= new_block_path(type: 'text') %>" class="btn btn-circle" data-toggle="modal" data-target="self" >
        <p class="symbol">
          <i class="fa fa-align-left fa-lg"></i>
        </p>
        <p>Text</p>
      </a>

      <!-- Image -->
      <a href="<%= new_block_path(type: 'image') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-camera fa-lg"></i><br>
        </p>
        <p>Image</p>
      </a>

      <!-- Video -->
      <a href="<%= new_block_path(type: 'video') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-video-camera fa-lg"></i><br>
        </p>
        <p>Video</p>
      </a>

      <!-- Embed -->
      <a href="<%= new_block_path(type: 'embed') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-cloud fa-lg"></i><br>
        </p>
        <p>Embed</p>
      </a>

      <!-- Blank -->
      <a href="<%= new_block_path(type: 'blank') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-square-o fa-lg"></i><br>
        </p>
        <p>Blank</p>
      </a>

      <!-- More -->
      <a href="<%= new_help_path(message: 'Something missing? Let us know what you want to add...') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-plus fa-lg"></i><br>
        <p>More</p>
      </a>

    </div>
  </div>

<% end %>
