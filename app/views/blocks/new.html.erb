<% if params[:type] %>

  <%= render "blocks/#{params[:type]}/form" %>

<% else %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
  </div>

  <div class="modal-body">
    <div class="text-center">
      <!-- Navbar -->
      <a href="<%= new_block_path(type: 'navbar') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self" >
        <p class="symbol">
          <i class="fa fa-bookmark fa-lg"></i>
        </p>
        <p>Menu Bar</p>
      </a>

      <!-- Text -->
      <a href="<%= new_block_path(type: 'text') %>" class="btn btn-circle" data-toggle="modal" data-target="self" >
        <p class="symbol">
          <i class="fa fa-align-left fa-lg"></i>
        </p>
        <p>Text</p>
      </a>

      <!-- Image -->
      <a href="<%= new_block_path(type: 'image') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-camera fa-lg"></i><br>
        </p>
        <p>Image</p>
      </a>

      <!-- Gallery -->
      <a href="<%= new_block_path(type: 'gallery') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-th fa-lg"></i><br>
        </p>
        <p>Gallery</p>
      </a>

      <!-- Video -->
      <a href="<%= new_block_path(type: 'video') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-video-camera fa-lg"></i><br>
        </p>
        <p>Video</p>
      </a>

      <!-- Profile -->
      <a href="<%= new_block_path(type: 'profile') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-user fa-lg"></i><br>
        </p>
        <p>Profile</p>
      </a>

      <!-- Files -->
      <a href="<%= new_block_path(type: 'files') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-file fa-lg"></i><br>
        </p>
        <p>Files</p>
      </a>

      <!-- Map -->
      <a href="<%= new_block_path(type: 'map') %>" class="btn btn-circle disabled" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-map-marker fa-lg"></i><br>
        </p>
        <p>Map</p>
      </a>

      <!-- More -->
      <a href="<%= new_help_path(message: 'You should add...') %>" class="btn btn-circle" data-toggle="modal" data-target="self">
        <p class="symbol">
          <i class="fa fa-plus fa-lg"></i><br>
        <p>More</p>
      </a>

    </div>
  </div>

  <div class="modal-footer modal-footer-fill">

    <ol class="carousel-indicators">
      <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
      <li data-target="#carousel-example-generic" data-slide-to="1"></li>
      <li data-target="#carousel-example-generic" data-slide-to="2"></li>
    </ol>
  </div>

<% end %>