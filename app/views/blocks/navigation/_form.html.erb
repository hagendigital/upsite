<%
  title = 'Create navigation'
  url = blocks_path(type: 'navigation')

  if @block.persisted?
    title = 'Edit navigation'
    url = block_path(type: 'navigation', id: @block.id)
  end
%>

<%= simple_form_for(@block, as: :block, url: url, remote: true) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title"><%= title %></h4>
  </div>

  <div class="modal-body">
    <%= f.input :body, as: 'text' %>
  </div>

  <div class="modal-footer">
    <% if @block.persisted? %>
      <a href="<%= block_path(@block) %>" data-method="delete" data-confirm="Are you sure you want to delete this block?" tabindex="-1" class="btn btn-danger pull-left">Delete</a>
    <% end %>
    <%= f.button :submit, 'Create', class: 'btn btn-success' %>
  </div>

<% end %>
