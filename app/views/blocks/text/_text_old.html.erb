<% attachment = text.attachments.first %>

<div class="block block-text" data-url="<%= block_path(text) %>">

  <div class="container">


    <div class="block-controls">
      <a href="<%= edit_block_path(text, params: { type: 'text' }) %>" title="" data-toggle="modal" data-target="#modal">
        <i class="fa fa-pencil"></i>
      </a>
      <a href="<%= block_path(text) %>" title="" data-method="delete" data-confirm="Are you sure you want to delete this block?">
        <i class="fa fa-trash-o"></i>
      </a>
      <a href="#" class="move" title="">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <div class="row">
      <div class="paper clearfix">

        <% if attachment %>
          <img src="<%= attachment.upload.url %>" class="img-responsive pull-<%= text.layout.gsub('image-', '') %>">
        <% end %>
        <div class="col-xs-6">
          <%= markdown text.body %>
        </div>
        <div class="col-xs-6">
          <%= markdown text.body %>
        </div>
      </div>
    </div>

  </div>


</div>
