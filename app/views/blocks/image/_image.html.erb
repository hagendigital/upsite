<header
  class="block image"
  data-url="<%= block_path(image) %>"
  id="top"
  style="background-image: url(<%= image.image %>); background-color: <%= image.background_color %>;">

  <div class="container">

    <div class="block-controls">
      <a href="<%= edit_block_path(image, params: { type: 'image' }) %>" title="" data-toggle="modal" data-target="#modal">
        <i class="fa fa-pencil"></i>
      </a>
      <a href="<%= block_path(image) %>" title="" data-method="delete" data-confirm="Are you sure you want to delete this block?">
        <i class="fa fa-trash-o"></i>
      </a>
      <a href="#" class="move" title="">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <h1>
      <img src="<%= image.image %>" alt="<%= @page.name %>" class="ximg-responsive"><br>

      <%= image.text %>
    </h1>

  </div>
</header>

