<%
  title = 'Create Showbox'
  url = blocks_path(type: 'showbox')

  if @block.persisted?
    title = 'Edit Showbox'
    url = block_path(type: 'showbox', id: @block.id)
  end
%>

<%= simple_form_for(@block, as: :block, url: url, remote: true, :html => { :multipart => true }) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title"><%= title %></h4>
  </div>

  <div class="modal-body">
    <%= f.input :text %>

    <%= f.fields_for :attachments do |ff| %>
      <%= ff.input :upload, label: 'Image', hint: 'Use the Showbox to showcase the key content of your page.' %>
    <% end %>

    <%= f.input :background_color, input_html: { data: { toggle: 'colorpicker' } } %>
  </div>

  <div class="modal-footer">
    <%= f.button :submit, 'Create', class: 'btn btn-success' %>
  </div>

<% end %>
