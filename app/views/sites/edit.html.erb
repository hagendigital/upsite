<%= simple_form_for(@site, url: settings_path, remote: true) do |f| %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal">&times;</button>
    <h4 class="modal-title">Settings</h4>
  </div>

  <div class="modal-body">
    <%= f.input :name %>
    <%= f.input :description, as: :text, input_html: { rows: 4 }, hint: '600 character limit' %>
    <%= f.input(:domain) if current_user.sudo? %>
    <%= f.input :color, label: 'Favorite color', input_html: { data: { toggle: 'colorpicker' } } %>
  </div>

  <div class="modal-footer">
    <div class="pull-left">
      <%= link_to 'Shuffle', shuffle_blocks_path,
            method: 'post',
            class: 'btn btn-default',
            tabindex: -1,
            data: { confirm: 'This will shuffle the order of your content, do you want to continue?' } %>

      <%= link_to 'Log out', logout_url(subdomain: 'www'),
            method: 'delete',
            class: 'btn btn-default',
            tabindex: -1,
            data: { confirm: 'Are you sure you want to log out?' } %>
    </div>

    <%= f.button :submit, class: 'btn btn-success' %>
  </div>

<% end %>
