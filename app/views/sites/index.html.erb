<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Your Sites</h4>
</div>

<div class="modal-body">
  <ul class="list-group" style="max-height: 350px; overflow: scroll; border-bottom: 1px solid #ddd;">
    <% @sites.each do |site| %>
      <li class="list-group-item" href="<%= site_link(site) %>">
        <div class="media">
          <div class="media-left media-middle">
            <a href="<%= site_link(site) %>">
              <img class="media-object img-circle" src="<%= site_favicon_link(site) %>" width="35">
            </a>
          </div>
          <div class="media-body">
            <a href="<%= site_link(site) %>" class="btn btn-default pull-right">Open</a>
            <h4 class="media-heading" style="margin: 10px 0 0 0;">
              <a href="<%= site_link(site) %>" class="text-link">
                <%= site.name %>
              </a>
            </h4>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="modal-footer">
  <span class="pull-left">
    <a href="<%= signup_url(subdomain: 'www') %>" class="btn btn-success">Create a new site</a>
    &nbsp;&nbsp; <span class="text-muted">You can create as many sites as you need.</span>
  </span>
</div>
