<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Settings</h4>
</div>

<%= render 'sites/settings/nav' %>

<div class="tab-content">
  <div class="tab-pane active">
    <div class="modal-body">
      <% if current_user.promo? %>
        <div class="row">
          <div class="col-sm-6 text-center">
            <div class="well well-success">
              <h4>Upsite <span class="label label-success" style="display: inline-block; transform: translate(0px, -2px); padding: 4px 7px;">PROMO</span></h4>
              <hr>
              <ul class="list-unstyled">
                <li>
                  <strong>Free</strong> for friends of Upsite
