<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <h4 class="modal-title">Settings</h4>
</div>

<%= render 'sites/settings/nav' %>

<div class="tab-content">
  <div class="tab-pane active">
    <div class="modal-body">
      <% if current_user.promo? %>
        <div class="row">
          <%= render 'sites/settings/plans/promo' %>
          <%= render 'sites/settings/plans/pro' %>
        </div>
      <% elsif current_user.pro? %>
        <div class="row">
          <%= render 'sites/settings/plans/free' %>
          <%= render 'sites/settings/plans/pro', active: true %>
        </div>
      <% else %>
        <div class="row">
          <%= render 'sites/settings/plans/free', active: true %>
          <%= render 'sites/settings/plans/pro' %>
        </div>
      <% end %>
    </div>
    <div class="modal-footer"></div>
  </div>
</div>
