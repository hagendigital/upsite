<header class="widget widget-divider">
  <div class="cotainer container-narrow">

    <div class="widget-controls">
      <a href="<%= edit_widget_path(divider, params: { type: 'divider' }) %>" title="" data-toggle="modal" data-target="#modal">
        <i class="fa fa-pencil"></i>
      </a>
      <a href="<%= widget_path(divider) %>" title="" data-method="delete" data-confirm="Are you sure you want to delete this widget?">
        <i class="fa fa-trash-o"></i>
      </a>
      <a href="#" class="move" title="">
        <i class="fa fa-bars"></i>
      </a>
    </div>

    <h2 data-nav-toc-anchor id="<%= divider.title.parameterize %>">
      <span><%= divider.title %></span>
    </h2>
  </div>
</header>